<?php
$search = $this->search;
$searchdata = array ();
if (is_array ( $search ) && count ( $search ) > 0) {
	foreach ( $search as $searchvalue ) {
		$element = $searchvalue ['element'];
		$attributes = $element->getAttributes ();
		$elementRender = call_user_func_array ( array (
				$this,
				'form' . ucfirst ( $attributes ['type'] ) 
		), array (
				$element 
		) );
		$elementLabel = $this->formLabel ( $element ) . ': ';
		if ($searchvalue ['flag'] == 1) {
			$searchdata [$searchvalue ['column']] ['label'] = $elementLabel . "\n";
			$searchdata [$searchvalue ['column']] ['input'] = $elementRender . "\n";
		}
	}
}
?>
