		$options = $field->getOptions();
		if (isset($attributes['rowspan']) && $attributes['rowspan'] > 0) {
			$rowspanTotal = $attributes['rowspan'];
			$rowspanStatus = true;
		}
		if ($rowspanCount == 1) {
