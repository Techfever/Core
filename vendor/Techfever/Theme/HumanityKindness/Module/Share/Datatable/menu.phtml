<?php
if ($this->menu) {
?>
<div id="menutabs">
	<?php
	$pages = $this->menu;
	$tabs = null;
	$contents = null;
	$total = count($pages);
	$count = 1;
	foreach ($pages as $page) {
		$label = (isset($page['label']) ? $page['label'] : null);
		$tab = (isset($page['tab']) ? $page['tab'] : null);
		$istab = (isset($page['istab']) ? $page['istab'] : False);
		$islink = (isset($page['islink']) ? $page['islink'] : False);
		$link = null;

		if ($islink) {
			$href = (isset($page['href']) ? $page['href'] : null);
			$link = '<a href="' . $href . '" id="href">' . $label . '</a>';
			$tabs .= '<li id="href">' . $link . '</li>';
			$tabs .= "\n";
		} else {
			$link = '<a href="#' . $tab . '">' . $label . '</a>';

			$tabs .= '<li>' . $link . '</li>';
			$tabs .= "\n";
		}

		if ($istab) {
			$content = (isset($page['content']) ? $page['content'] : null);
			$contents .= '<div id="' . $tab . '">';
			$contents .= "\n";
			$contents .= $content;
			$contents .= "\n";
			$contents .= '</div>';
			$contents .= "\n";
		}
	}
	echo '<ul>' . "\n" . $tabs . '</ul>' . "\n" . $contents;
	?>
</div>
<?php
}
?>